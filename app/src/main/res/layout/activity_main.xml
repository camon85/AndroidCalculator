<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환율정보 업데이트 일자"
        android:id="@+id/currencyDate"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환율"
        android:id="@+id/currencyInfo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:text="source"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:id="@+id/sourceExchangeText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|center"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/sourceExchange" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:text="대한민국 KRW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:id="@+id/targetExchangeText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|center"
            android:id="@+id/targetExchange" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:rowCount="4"
        android:columnCount="4"
        android:orientation="horizontal">
        <Button
            android:text="7"
            android:id="@+id/btn_7"/>
        <Button
            android:text="8"
            android:id="@+id/btn_8"/>
        <Button
            android:text="9"
            android:id="@+id/btn_9"/>
        <Button
            android:text="clear"
            android:id="@+id/btn_clear"/>
        <Button
            android:text="4"
            android:id="@+id/btn_4"/>
        <Button
            android:text="5"
            android:id="@+id/btn_5"/>
        <Button
            android:text="6"
            android:id="@+id/btn_6"/>
        <Button
            android:text="←"
            android:id="@+id/btn_backspace"/>
        <Button
            android:text="1"
            android:id="@+id/btn_1"/>
        <Button
            android:text="2"
            android:id="@+id/btn_2"/>
        <Button
            android:text="3"
            android:id="@+id/btn_3"/>
        <Button
            android:text="="
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:id="@+id/btn_calculate"/>
        <Button
            android:text="0"
            android:id="@+id/btn_0"/>
        <Button
            android:text="00"
            android:id="@+id/btn_00"/>

        <Button
            android:text="000"
            android:id="@+id/btn_000"/>
    </GridLayout>

</LinearLayout>
